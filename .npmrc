# npm configuration for faster installations

# Use lockfile only, don't update it
package-lock=true

# Prefer offline mode when possible
prefer-offline=true

# Disable audit during install for speed
audit=false

# Disable funding messages
fund=false

# Minimal log level
loglevel=error

# Enable progress for visibility (Railway shows this)
progress=true

# Cache optimization
cache-min=9999999
